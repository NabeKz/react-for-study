{
  "extends": "next/core-web-vitals",
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./lib"]],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "ignorePatterns": ["*.config.js"],
  "overrides": [
    {
      "files": [
        "**/__tests__/**/*.ts?(x)",
        "**/*.spec.ts?(x)"
      ]
    }
  ]
}
